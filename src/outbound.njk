---
title: IFR - International Friendship Room
layout: "base.njk"
cssPath: "/css/blog.css"
---

{% include 'nav.njk' %}

<header class="header">
  <img class="tablet-desktop" src="../img/blog/outbound.webp" alt="" />
  <img class="only-mobile" src="../img/blog/outbound-mob.webp" alt="" />
</header>

{% set geralData = collections.geral[0].data %}

<section class="blog">
  <div class="blog-title">
    <h1>Outbound Student Exchange Program</h1>
    <h2>{{ geralData.outbound }}</h2>
    <a href="/updates" class="brownButton">Explore our latest updates</a>
    <iframe
      width="560"
      height="315"
      src="https://www.youtube.com/embed/bm-6LN6Tgh0?si=Wzkqpq1LdlnTr7RN"
      title="YouTube video player"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      referrerpolicy="strict-origin-when-cross-origin"
      allowfullscreen
    ></iframe>
  </div>
  <div class="blog-wrap">
    {% for item in collections.latestOutbound | limit(8) %}
    <div class="blog-item">
      <a href="{{ item.url }}">
        <img src="{{ item.data.image }}" alt="" />
        <div class="info">
          <div class="title">
            <p class="date">
              {{ item.data.start | eventDateJa(item.data.end) }}
            </p>
            <h3>{{ item.data.title }}</h3>
            <h4>{{ item.data.subtitle }}</h4>
          </div>
          <p class="description">{{ item.data.description }}</p>
          <p class="greenButton">Read more</p>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>
</section>

{% include 'footer.njk' %}
